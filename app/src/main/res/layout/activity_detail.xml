<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.udacity.sandwichclub.DetailActivity"
    android:background="@color/layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/sandwichImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:adjustViewBounds="true"
        tools:src="@drawable/sandwich"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/mainNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Hams and Cheese"
        android:background="@color/white"
        android:padding="@dimen/mainName_padding"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textsize_16"
        android:gravity="center_horizontal"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/alsoKnownAsTextViewLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_6"
            android:textColor="@color/colorPrimary"
            android:layout_marginRight="@dimen/margin_6"
            android:text="@string/detail_also_known_as_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/knownAsTextView"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:lineSpacingMultiplier="1"
            android:textColor="@color/text_values"
            android:layout_height="wrap_content"
            tools:text="Cuber"/>


    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/margin_8dp"
     android:orientation="horizontal">

     <TextView
         android:id="@+id/ingredientsTextViewLabel"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:gravity="end"
         android:layout_marginEnd="@dimen/margin_6"
         android:layout_marginRight="@dimen/margin_6"
         android:textColor="@color/colorPrimary"
         android:layout_height="wrap_content"
         android:text="@string/detail_ingredients_label"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/ingredientsTextView"
         android:layout_width="0dp"
         android:textColor="@color/text_values"
         android:layout_height="wrap_content"
         tools:text="Ham, Cheese,Butter"
         android:layout_marginEnd="2dp"
         android:layout_marginRight="2dp"
         android:lineSpacingMultiplier="1"
         android:layout_weight="2"/>

 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/placeOfOriginTextViewLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/colorPrimary"
            android:gravity="end"
            android:layout_marginEnd="@dimen/margin_6"
            android:layout_marginRight="@dimen/margin_6"
            android:layout_height="wrap_content"
            android:text="@string/detail_place_of_origin_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placeOfOriginTextView"
            android:layout_width="0dp"
            android:textColor="@color/text_values"
            android:layout_height="wrap_content"
            tools:text="England"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp">
     <TextView
        android:id="@+id/descriptionTextViewLabel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginEnd="@dimen/margin_6"
        android:layout_marginRight="@dimen/margin_6"
        android:text="@string/detail_description_label"
        android:layout_height="wrap_content" />


     <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:lineSpacingMultiplier="1"
        android:textColor="@color/text_values"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        tools:text="Lorem Ipsumdhjh sddjkkjsd sajbsdjhsk sakhcsdjkhvjsk scnskjc"/>

    </LinearLayout>

</LinearLayout>
</ScrollView>